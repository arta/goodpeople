!!!
%html
	%head
		%meta{ charset:'utf-8' }
		%meta{ name:'viewport', content:'width=device-width, initial-scale=1.0' }

		%title Good People LLC - Live-in caregivers & companions
		// 5/12/15: http://blog.steveklabnik.com/posts/2013-06-25-removing-turbolinks-from-rails-4
		=stylesheet_link_tag		'application'#, media: 'all'#, 'data-turbolinks-track' => true
		=javascript_include_tag 'application'#, 'data-turbolinks-track' => true
		=csrf_meta_tags

		%script
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-76652418-1', 'auto');
			ga('send', 'pageview');

	%body.body--interior
		.off-canvas-wrapper
			.off-canvas-wrapper-inner{ data:{ off:{ canvas:{ wrapper:true } } } }

				-# Mobile header:
				%header.title-bar.mobile-header.sticky.show-for-small-only( data-responsive-toggle='figure-it-out' data-hide-for='medium' )
					.title-bar-left
						%button.menu-icon.dark{ type:"button", data:{ toggle:'offCanvas' } }
					.title-bar-right
						.contact-info-wrap--mobile-header
							=link_to '1-800-608-8003', 'tel:18006088003', class:'contact-info'
							=link_to 'info@goodpeople.us', 'mailto:info@goodpeople.us', class:'contact-info'

				-# Mobile (off-canvas) navigation:
				.off-canvas.position-left{ id:"offCanvas", data:{ off:{ canvas:true } } }
					%nav
						%ul.menu.vertical
							%li= link_to image_tag( "GP_Logo house RGB.jpg", size:'50x50'), '/'
							%li= link_to 'Welcome', intro_path
							%li= link_to 'Type of Care', type_of_care_path
							%li= link_to 'Caregivers', caregivers_path
							%li= link_to 'Procedure', procedure_path
							%li= link_to 'Service area', servicearea_path
							%li= link_to 'Cost', cost_path
							%li= link_to 'Testimonials', testimonials_path
							%li= link_to 'Contact us ...', contactus_path
							%li &nbsp;
							%li= link_to '1-800-608-8003', 'tel:18006088003', class:'contact-info'
							%li= link_to 'info@goodpeople.us', 'mailto:info@goodpeople.us', class:'contact-info'

				-# Page content (with desktop header and navigation):
				.off-canvas-content{ data:{ off:{ canvas:{ content:true } } } }

					-# Desktop header:
					.row.show-for-medium
						%header.desktop-header
							.column.small-12= render partial:'header', locals:{ map_ref:'/' }

					-# Desktop navigation:
					.row
						%nav.column.medium-3.show-for-medium
							%ul.menu.vertical.nav-desktop
								%li= link_to 'Intro', intro_path
								%li= link_to 'Type of Care', type_of_care_path
								%li= link_to 'Caregivers', caregivers_path
								%li= link_to 'Procedure', procedure_path
								%li= link_to 'Service area', servicearea_path
								%li= link_to 'Cost', cost_path
								%li= link_to 'Testimonials', testimonials_path
								%li= link_to 'Contact us ...', contactus_path
								%li.print-link= link_to 'Print view', print_path

						-# Main:
						%main
							.mt--1em.show-for-small-only &nbsp;
							.column.small-12.medium-9
								=yield


					%footer.row
						.columns.small-offset-3.small-9 &copy; 2001 - #{Date.today.year} Good People, LLC

		-# replacing CSS detection of current page with JS detection (may not work well for complicated menus?):
		-# https://css-tricks.com/snippets/javascript/get-url-and-url-parts-in-javascript/
		-# https://css-tricks.com/snippets/jquery/add-active-navigation-class-based-on-url/
		:javascript
			$loc = location.pathname.split("/").pop();
			$(function() { $('nav a[href^="/' + $loc + '"]').parent().addClass('current'); });
			// $(function() { $('nav a[href^="/' + location.pathname.split("/")[1] + '"]').parent().addClass('current'); });
