		:javascript
			const btnsToEnter = document.getElementsByClassName('btn-cta-learn-more')
			const btnToEnterText = btnsToEnter[0].textContent;
			let actionVerb = 'Click here to'
			if ('ontouchstart' in window) { actionVerb = 'Tap here to' }
			window.onload = function() {
				for (let i=0; i<btnsToEnter.length; i++) {
					btnsToEnter[i].textContent = `${actionVerb} ${btnToEnterText}`
				}
			}
